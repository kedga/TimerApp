@if (Timer is null) throw new Exception("No timer object provided to TimerTitle.razor.");


<div class="w-full px-2 text-3xl flex gap-2 justify-between items-baseline font-bold text-start text-white text-nowrap">
	<p class="flex-grow overflow-x-clip">@Timer.Name</p>
	<p class="text-2xl font-semibold top-2 right-4">
		@Timer.TimeLimit.GetTimeString(true, true)
	</p>
</div>

@code {
	[Parameter] public TimerManager Timer { get; set; } = null!;
}
